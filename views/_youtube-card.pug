mixin youtube-card(id,duration, year)
  .col
    .card.shadow-sm
      iframe(width="100%" height="225" src="https://www.youtube.com/embed/" + id title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen)
      .card-body
        p.card-text
          block
        .d-flex.justify-content-between.align-items-center
          //.btn-group
            button.btn.btn-sm.btn-outline-secondary(type='button') View
            button.btn.btn-sm.btn-outline-secondary(type='button') Edit
          small #{year}
          small.text-muted #{duration} mins
