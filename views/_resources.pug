include _mixins

if videos.length > 0
  section.py-2.container
    h2.text-center Talks & Videos
  .album.py-2.bg-dark
    .container
      .row.row-cols-1.row-cols-sm-2.row-cols-md-3.g-3
        each video in videos
          +youtube-card(video)
            | #{video.description}

if articles.length > 0
  section.py-2.container
    h2.text-center Blogs & Articles
    .list-group
      each article in articles
        +lg-link(article)

if demos.length > 0
  section.py-2.container
    h2.text-center Demos & Source Code
    .list-group
      each demo in demos
        +lg-link(demo)

if websites.length > 0
  section.py-2.container
    h2.text-center Websites
    .list-group
      each website in websites
        +lg-link(website)
