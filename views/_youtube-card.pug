mixin youtube-card(video)
  .col
    .h-100.p-4.bg-white.rounded.text-gray-600.shadow      
      iframe(width="100%" height="225" src="https://www.youtube.com/embed/" + video.id title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen)
      .card-body
        p.card-text
          block
        .flex.flex-row.justify-between.items-center
          small #{video.year}
          small.text-muted #{video.duration} mins
